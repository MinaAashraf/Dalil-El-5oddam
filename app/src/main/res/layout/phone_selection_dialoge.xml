<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_20sdp"
        android:backgroundTint="@color/grey"
        android:layoutDirection="rtl">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/phone_choosing_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="@string/choose_phone_label"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/phone1_num"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/phone_1_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/circle_background"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_local_phone_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_choosing_label" />

            <TextView
                android:id="@+id/phone1_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01201090632"
                app:layout_constraintEnd_toEndOf="@id/phone_1_icon"
                app:layout_constraintStart_toStartOf="@id/phone_1_icon"
                app:layout_constraintTop_toBottomOf="@id/phone_1_icon" />

            <ImageView
                android:id="@+id/phone_2_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/circle_background"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_local_phone_24"
                app:layout_constraintStart_toEndOf="@id/phone_1_icon"
                app:layout_constraintTop_toBottomOf="@id/phone_choosing_label"
                app:tint="@color/dark_grey" />

            <TextView
                android:id="@+id/phone2_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01201090632"
                app:layout_constraintEnd_toEndOf="@id/phone_2_icon"
                app:layout_constraintStart_toStartOf="@id/phone_2_icon"
                app:layout_constraintTop_toBottomOf="@id/phone_2_icon" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
